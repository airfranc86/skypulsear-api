{
    "dashboard": {
        "title": "SkyPulse API - Overview",
        "tags": [
            "skypulse",
            "api",
            "monitoring"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 1,
        "refresh": "30s",
        "panels": [
            {
                "id": 1,
                "title": "HTTP Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{method}} {{endpoint}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "HTTP Request Duration (p95)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{method}} {{endpoint}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "HTTP Error Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_request_errors_total[5m])",
                        "legendFormat": "{{error_type}} {{status_code}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Circuit Breaker States",
                "type": "stat",
                "targets": [
                    {
                        "expr": "circuit_breaker_state",
                        "legendFormat": "{{circuit_name}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Circuit Breaker Failures",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(circuit_breaker_failures_total[5m])",
                        "legendFormat": "{{circuit_name}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "Weather Source Availability",
                "type": "stat",
                "targets": [
                    {
                        "expr": "weather_source_availability",
                        "legendFormat": "{{source}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                }
            }
        ]
    }
}